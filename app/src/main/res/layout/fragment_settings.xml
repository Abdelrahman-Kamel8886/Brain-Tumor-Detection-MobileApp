<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dr.settings.SettingsFragment"
    android:background="@color/background4">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="40sp"
        android:layout_height="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text=""
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="25sp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="70sp"
        android:layout_marginHorizontal="30sp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="80sp"
                android:text="doctor name"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />



            <ImageView
                android:id="@+id/mail_img"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_txt"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_marginStart="15sp"
                android:layout_marginTop="20sp"/>
            <TextView
                android:id="@+id/mail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/mail_img"
                app:layout_constraintTop_toTopOf="@id/mail_img"
                app:layout_constraintBottom_toBottomOf="@id/mail_img"
               android:layout_marginStart="20sp"
                android:text="user@mail.com"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mail_img"
                android:src="@drawable/ic_baseline_phone_24"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"/>
            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/phone_img"
                app:layout_constraintTop_toTopOf="@id/phone_img"
                app:layout_constraintBottom_toBottomOf="@id/phone_img"
                android:layout_marginStart="20sp"
                android:text="012345678947"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/birth_img"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_img"
                android:src="@drawable/ic_baseline_calendar_month_24"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"/>
            <TextView
                android:id="@+id/birth_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/birth_img"
                app:layout_constraintTop_toTopOf="@id/birth_img"
                app:layout_constraintBottom_toBottomOf="@id/birth_img"
                android:layout_marginStart="20sp"
                android:text="18-8-2000"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardBackgroundColor="@color/colornew1"
                app:layout_constraintWidth_percent="0.8"
                app:cardCornerRadius="10sp"
                android:layout_marginBottom="10sp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/mg"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                    <ImageView
                        android:id="@+id/mg"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/logout2"
                        android:layout_marginEnd="30sp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="159sp"
        android:layout_height="159sp"
        android:layout_marginTop="50sp"
        app:cardBackgroundColor="@color/colornew1"
        app:cardCornerRadius="100sp"
        app:layout_constraintEnd_toEndOf="@id/card2"
        app:layout_constraintStart_toStartOf="@id/card2"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="100sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10sp"

                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="100sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="10sp"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@id/img"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/doctor"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:clickable="false"
        android:background="@color/colornew1"

        />






</androidx.constraintlayout.widget.ConstraintLayout>