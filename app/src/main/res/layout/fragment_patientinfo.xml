<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dr.patientdetails.PatientinfoFragment"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/pa_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20sp"
                android:text="Phone Number : "
                android:layout_marginTop="20sp"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pa_phone_txt"
                app:layout_constraintBottom_toBottomOf="@id/pa_phone_txt"
                tools:text="01012458789"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pa_phone_txt"
                android:layout_marginStart="20sp"
                android:text="Email : "
                android:layout_marginTop="20sp"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pa_email_txt"
                app:layout_constraintBottom_toBottomOf="@id/pa_email_txt"
                tools:text="mail@mail.com"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pa_email_txt"
                android:layout_marginStart="20sp"
                android:text="Age : "
                android:layout_marginTop="20sp"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pa_age_txt"
                app:layout_constraintBottom_toBottomOf="@id/pa_age_txt"
                tools:text="20"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pa_age_txt"
                android:layout_marginStart="20sp"
                android:text="Date : "
                android:layout_marginTop="20sp"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/pa_date_txt"
                app:layout_constraintBottom_toBottomOf="@id/pa_date_txt"
                tools:text="17-May-2022"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Description : "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/background"
                app:layout_constraintStart_toStartOf="@id/pa_date_txt"
                app:layout_constraintTop_toBottomOf="@id/pa_date_txt"
                android:layout_marginTop="20sp"
                />
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Details note : Lorem Ipsum is simply dummy
text of the printing and typesetting industry.
Lorem Ipsum has been the industry's "
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt6"
                app:layout_constraintStart_toStartOf="@id/txt6"
                android:layout_marginHorizontal="20sp"
                android:textColor="@color/black"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>