<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dr.result.ShowResultFragment"
    android:background="@color/background4">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="40sp"
        android:layout_height="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="10sp"
        app:layout_constraintTop_toBottomOf="@id/back">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradientc3"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="120sp"
        android:layout_height="120sp"
        app:layout_constraintStart_toStartOf="@id/card2"
        app:layout_constraintEnd_toEndOf="@id/card2"
        android:layout_marginHorizontal="20sp"
        app:cardCornerRadius="100sp"
        android:backgroundTint="@color/background4"
        app:layout_constraintTop_toTopOf="@id/card2"
        android:layout_marginTop="60sp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                app:cardCornerRadius="100sp"
                android:backgroundTint="@color/colornew1"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/patient"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/pa_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card3"
        tools:text="username"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />








    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@id/pa_txt"
        app:layout_constraintBottom_toTopOf="@id/write_btn"
        app:cardCornerRadius="10sp"
        android:layout_marginVertical="20sp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ma_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20sp"
                android:text="Mass Lesion Founded : "
                android:layout_marginTop="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/ma_txt"
                app:layout_constraintBottom_toBottomOf="@id/ma_txt"
                tools:text="Yes"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ma_txt"
                android:layout_marginStart="20sp"
                android:text="Tumor Type : "
                android:layout_marginTop="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/type_txt"
                app:layout_constraintBottom_toBottomOf="@id/type_txt"
                tools:text="Meningioma"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/s_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_txt"
                android:layout_marginStart="20sp"
                android:text="Severity Degree : "
                android:visibility="gone"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/pa_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/s_txt"
                app:layout_constraintBottom_toBottomOf="@id/s_txt"
                tools:text="||"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/mri_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/s_txt"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="MRI's with Tumor Segmentaion"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                />




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_images"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/mri_txt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20sp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/write_btn"
        android:layout_width="0dp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="@id/card4"
        app:layout_constraintEnd_toEndOf="@id/card4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10sp"
        android:background="@drawable/edittext2"
        android:textColor="@color/white"
        app:backgroundTint="@color/colornew1"
        android:visibility="gone"
        android:text="Write report"
        />

</androidx.constraintlayout.widget.ConstraintLayout>